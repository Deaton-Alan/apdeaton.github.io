<!DOCTYPE HTML>
<html lang="en-us">
<head>
<meta charset="utf-8">
<title>Santa's List</title> 
<script>
    //This is a class for a girl child
class Child {
    constructor(first, last, age, gift) {
        this.firstName = first;
        this.lastName = last;
        this.age = age;
        this.gift = gift;
    }
    
}

    //This is the inheritance portion of the assignment
Child.prototype.info = function() {
        return this.firstName + " " + this.lastName + " age " + this.age + " would like a(n) "
        + this.gift + " for Christmas.";
}

var child;
var submission = false;

function submitForm(){
    var firstName = document.getElementById("fName").value;
    var lastName = document.getElementById("lName").value;
    var age = document.getElementById("age").value;
    var gift = document.getElementById("gift").value;
    submission = true;

    child = new Child(firstName, lastName, age, gift);
}

function displayInfo(){
    if(submission == false){
        var message = "No child has submitted a form yet."
        document.getElementById("output").innerHTML = message;
    }
    else{
    document.getElementById("output").innerHTML = child.info();
    }
}
</script>
</head>

<body>
<h1>CHRISTMAS LIST FOR SANTA</h1>

    <div id="childLetter">
        <h2>Child's Letter</h2>
        Your First Name: <input type="text" id="fName"><br>
        Your Last Name: <input type="text" id="lName"><br>
        Your Age: <input type="text" id="age"><br>
        What would you like for Christmas?<br>
        Choose ONE thing because Santa's very busy!<br>
        <input type="text" id="gift"><br><br>
        <button type="button" onclick="submitForm()">Submit Form</button>
    </div>
    <br><br>
    <div id="santaEmail">
        <h2>Santa's Email</h2>
        Hey Santa!  Check your email! <br><br>
        <button type="button" onclick="displayInfo()">Check</button>
        <br><br>
    </div>
    <div id="output"></div>
</body>
</html>
